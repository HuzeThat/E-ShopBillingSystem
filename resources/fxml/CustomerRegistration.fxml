<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shopbilling.controller.CustomerRegistrationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox alignment="CENTER" spacing="15" styleClass="product-card" maxWidth="400">
        <Label text="Customer Registration" styleClass="h1" />

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="300">
            <Label text="Name" />
            <TextField fx:id="nameField" promptText="Enter your full name" />
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="300">
            <Label text="Username" />
            <TextField fx:id="usernameField" promptText="Choose a username" />
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="300">
            <Label text="Email" />
            <TextField fx:id="emailField" promptText="Enter your email" />
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="300">
            <Label text="Phone" />
            <TextField fx:id="phoneField" promptText="Enter your phone number" />
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="300">
            <Label text="Address" />
            <TextField fx:id="addressField" promptText="Enter your address" />
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="300">
            <Label text="Password" />
            <PasswordField fx:id="passwordField" promptText="Choose a password" />
        </VBox>

        <Button onAction="#handleRegister" text="Register" maxWidth="300" styleClass="button-success" />
        <Button onAction="#handleShowLogin" text="Back to Login" maxWidth="300" styleClass="button-secondary" />
    </VBox>
</VBox>
